{
  "version": 2,
  "builds": [
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "packages/backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/packages/backend/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/packages/frontend"
    }
  ]
} 